extends layout

block content 
    a(href='/users/home')
        i.fas.fa-arrow-alt-circle-left
    h1 Election Results 
    if candidates 
        each candidate, i in candidates
            table.table
                    thead
                        tr 
                        th(scope='col') First Name
                        th(scope='col') Last Name
                        th(scope='col') Votes 
                    tbody
                        tr
                        th(scope='row')  #{candidate.firstName}
                        td  #{candidate.lastName}
                        td  #{candidate.votes}
                        

